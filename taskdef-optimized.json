{
  "family": "balekai-task-optimized",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::422456985301:role/balekai-ecs-exec-role",
  "taskRoleArn": "arn:aws:iam::422456985301:role/balekai-ecs-task-role",
  "containerDefinitions": [{
    "name": "balekai",
    "image": "422456985301.dkr.ecr.us-east-1.amazonaws.com/balekai-backend:latest",
    "portMappings": [{ "containerPort": 8080, "hostPort": 8080, "protocol": "tcp" }],
    "environment": [
      { "name":"SPRING_DATASOURCE_URL", "value":"jdbc:postgresql://balekai-postgres-new.cy7yeimaywkm.us-east-1.rds.amazonaws.com:5432/balekai_db" },
      { "name":"SPRING_PROFILES_ACTIVE", "value":"prod" }
    ],
    "secrets": [
      { "name":"SPRING_DATASOURCE_USERNAME","valueFrom":"arn:aws:secretsmanager:us-east-1:422456985301:secret:balekai-db-credentials:username::" },
      { "name":"SPRING_DATASOURCE_PASSWORD","valueFrom":"arn:aws:secretsmanager:us-east-1:422456985301:secret:balekai-db-credentials:password::" }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/balekai/backend",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }]
}
